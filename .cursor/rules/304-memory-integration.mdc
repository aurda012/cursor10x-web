      globalThis.MEMORY_SYSTEM.storeKnowledge(
        context.topic,
        {
          category: "working_context",
          content: context.details,
          importance: mapImportance(context.importance),
          source: "short_term_memory",
          timestamp: Date.now()
        }
      );
    }
  }
  
