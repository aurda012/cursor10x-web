{
  "version": "2.0.0",
  "description": "Cursor System Configuration with Centralized Initialization",
  "initialization": {
    "autoRunFiles": [".cursor/centralized-init.js", ".cursor/enforcer.js"],
    "priority": "critical",
    "forceActivation": true
  },
  "rules": [
    {
      "name": "universal_enforcer",
      "pattern": "**/*",
      "priority": "critical",
      "script": ".cursor/enforcer.js",
      "runOnEveryMessage": true,
      "runOnEveryResponse": true,
      "forceActivation": true
    },
    {
      "name": "memory_system",
      "pattern": "**/*",
      "priority": "high",
      "script": ".cursor/systems/memory-system.js",
      "runOnEveryMessage": true,
      "runOnEveryResponse": true
    },
    {
      "name": "scratchpad_system",
      "pattern": "**/*",
      "priority": "high",
      "script": ".cursor/systems/scratchpad-system.js",
      "runOnEveryMessage": true,
      "runOnEveryResponse": true
    },
    {
      "name": "multi_agent_system",
      "pattern": "**/*",
      "priority": "high",
      "script": ".cursor/systems/multi-agent-system.js",
      "runOnEveryMessage": true,
      "runOnEveryResponse": true
    },
    {
      "name": "direct_banner",
      "pattern": "**/*",
      "priority": "critical",
      "script": ".cursor/communication/direct-banner.js",
      "runOnEveryResponse": true,
      "enforceBanners": true
    },
    {
      "name": "000_loader_rule",
      "pattern": "**/*",
      "priority": "critical",
      "rule": ".cursor/rules/000-loader.mdc",
      "runOnEveryMessage": true
    },
    {
      "name": "000_enforcer_rule",
      "pattern": "**/*",
      "priority": "critical",
      "rule": ".cursor/rules/000-enforcer.mdc",
      "runOnEveryMessage": true
    }
  ],
  "systems": {
    "memory": {
      "enabled": true,
      "forceActivation": true,
      "path": ".cursor/systems/memory-system.js"
    },
    "scratchpad": {
      "enabled": true,
      "forceActivation": true,
      "path": ".cursor/systems/scratchpad-system.js"
    },
    "multiAgent": {
      "enabled": true,
      "forceActivation": true,
      "defaultAgent": "executive-architect",
      "path": ".cursor/systems/multi-agent-system.js"
    },
    "banner": {
      "enabled": true,
      "enforce": true,
      "alwaysShow": true,
      "path": ".cursor/communication/direct-banner.js"
    },
    "centralized": {
      "enabled": true,
      "forceActivation": true,
      "path": ".cursor/centralized-init.js"
    }
  },
  "chat": {
    "messageHooks": [
      {
        "script": ".cursor/centralized-init.js",
        "priority": "critical",
        "runOnEveryMessage": true
      },
      {
        "script": ".cursor/enforcer.js",
        "priority": "critical",
        "runOnEveryMessage": true
      },
      {
        "script": ".cursor/systems/memory-system.js",
        "priority": "high",
        "runOnEveryMessage": true
      },
      {
        "script": ".cursor/systems/scratchpad-system.js",
        "priority": "high",
        "runOnEveryMessage": true
      },
      {
        "script": ".cursor/systems/multi-agent-system.js",
        "priority": "high",
        "runOnEveryMessage": true
      }
    ],
    "responseHooks": [
      {
        "script": ".cursor/communication/direct-banner.js",
        "priority": "critical",
        "runOnEveryResponse": true
      },
      {
        "script": ".cursor/enforcer.js",
        "priority": "critical",
        "runOnEveryResponse": true
      }
    ]
  }
}
